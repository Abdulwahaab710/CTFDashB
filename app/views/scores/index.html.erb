<% if @teams.empty? %>
  <h1>There are no teams</h1>
<% else %>
  <table style='width: 100%;'>
    <thead>
      <th style='width: 5vw;'>Place</th>
      <th>Team name</th>
      <th>Score</th>
    </thead>
    <tbody>
      <% @teams.each_with_index do |team, index| %>
        <tr>
          <td><%= index.next %></td>
          <td><%= team&.name %></td>
          <td><%= team&.score %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
