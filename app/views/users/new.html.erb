<div class="col-md-6 col-md-offset-3">
  <div class="row">
    <% provide(:title, 'Sign up') %>
    <h1>Sign up</h1>
  </div>

  <div class="row">
      <%= form_for(@user, url: signup_path) do |f| %>
        <%= render 'shared/error_messages', obj: @user %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :username %>
        <%= f.text_field :username, class: 'form-control' %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.submit "Create my account", class: "btn btn-primary" %>
        <hr>
        <% if google_oauth2_available? %>
          <%= link_to "/auth/google_oauth2", method: :post, class: "btn btn-primary", style: "padding: 0;padding-right: 5px; background: #4285F4;" do %>
           <img src="/signin_google.svg" />
           Sign in with Google
          <% end %>
        <% end %>


      <% end %>
  </div>
</div>
