<% provide(:title, 'Pages') %>
<h1>Pages</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if !@pages&.empty? %>
      <table class="table table-hover">
        <% @pages&.each do |page| %>
          <tr>
            <td><%= link_to page.path, page %></td>
            <td><%= link_to 'Edit', edit_admin_pages_path(page) %></td>
            <td><%= link_to 'Delete', delete_admin_pages_path(page), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td></td>
          </tr>
        <% end %>
      </table>
    <% else %>
      <h2>There aren't any pages.</h2>
      <h4><%= link_to 'Click here to create a page', new_admin_pages_path %></h4>
    <% end %>
  </div>
</div>
