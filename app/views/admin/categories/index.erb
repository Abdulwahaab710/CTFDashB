<% provide(:title, 'Categories') %>
<h1>Categories</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if !@categories.empty? %>
      <table class="table table-hover">
        <% @categories.each do |category| %>
          <tr>
            <td><%= link_to category.name, category %></td>
            <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
            <td><%= link_to 'Delete', delete_admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td></td>
          </tr>
        <% end %>
      </table>
    <% else %>
      <h2>There are no categories.</h2>
      <h4><%= link_to 'Click here to create a category', new_admin_category_path %></h4>
    <% end %>
  </div>
</div>
