<h1>CTF Dashboard Settings</h1>
<div class="col-md-6 col-md-offset-3">
  <%= form_tag do %>
    <div id='form-body'>
      <% @ctf_settings.each do |ctf_setting| %>
        <%= text_field_tag "key[]",ctf_setting.key, style: 'width: 45%; text-align: center;'  %> <%= text_field_tag "value[]", ctf_setting.value, style: 'width: 45%; text-align: center;' %> <%= fa_icon 'trash', class: 'btn btn-danger'  %>
      <% end %>
    </div>
    <div>
      <span style='text-align: left;'>
        <%= button_tag 'Add a new field',
          class: "btn btn-primary",
          style: 'width: 40%;',
          type: 'button',
          id: 'add-field-btn'
        %>
      </span>
      <span style='text-align: right;'>
        <%= submit_tag 'Update', class: "btn btn-success", style: 'width: 40%;' %>
      </span>
    </div>
  <% end %>
</div>
