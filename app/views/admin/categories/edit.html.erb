<% provide(:title, 'Edit Category') %>
<h1>Update <%= @category.name %> category</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@category, url: edit_admin_category_path) do |f| %>
      <%= render 'shared/error_messages', obj: @category %>

      <%= f.label :name, 'Category name' %>
      <%= f.text_field :name, class: 'form-control', value: @category.name %>

      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control', value: @category.description %>

      <br>
      <%= f.submit "Update category", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
