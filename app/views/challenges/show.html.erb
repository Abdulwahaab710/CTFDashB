<%= render 'challenge_panel', ctf_challenge: @challenge do %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@challenge_submission, url: submit_flag_path) do |f| %>
        <%= render 'shared/error_messages', obj: @user %>

        <%= f.label :flag %>
        <%= text_field_tag name: 'flag', class: 'form-control' %>

        <%= f.submit "Submit flag", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
<% end %>
